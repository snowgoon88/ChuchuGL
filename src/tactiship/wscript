#!/usr/bin/env python
# encoding: utf-8

def build(bld):
    bld.program(
        source=['tactiship.cpp', 'trackball.cc'], target='tactiship',
        includes=['.','..'],
        libs=['m'],
        use = ['OPENGL','GLFW3','FREETYPE2','FTGL']
    )
    bld.program(
        source=['simulator.cpp', 'trackball.cc'], target='simulator',
        includes=['.','..'],
        libs=['m'],
        use = ['OPENGL','GLFW3','FREETYPE2','FTGL']
    )
    bld.program(
        source=['solar.cpp'], target='solar',
        includes=['.','..'],
        libs=['m'],
        use = ['SOIL','OPENGL','GLFW3','FREETYPE2','FTGL','PROJECT']
    )
    # bld.program(
    #     source=['test-022-3dtexture.cpp'], target='test-022-3dtexture',
    #     includes=['.','..'],
    #     libs=['m'],
    #     use = ['SOIL','OPENGL','GLFW3','FREETYPE2','FTGL','PROJECT']
    # )
    bld.program(
        source=['test-023-3dsmartshaders.cpp'], target='test-023-3dsmartshaders',
        includes=['.','..'],
        libs=['m'],
        use = ['OPENGL','GLFW3','FREETYPE2','FTGL','PROJECT']
    )
